{
  "name": "stackit",
  "version": "1.0.0",
  "description": "A minimal Q&A forum platform for collaborative learning",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
